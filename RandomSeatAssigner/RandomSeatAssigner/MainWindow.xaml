        xmlns:local="clr-namespace:RandomSeatAssigner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstSeats" HorizontalAlignment="Left" Height="387" Margin="454,10,0,0" VerticalAlignment="Top" Width="301"/>
        <Button x:Name="btnFile" Content="Select Roster" HorizontalAlignment="Left" Height="46" Margin="237,86,0,0" VerticalAlignment="Top" Width="165" Click="BtnFile_Click"/>
        <Button x:Name="btnAssign" Content="Assign Seats" HorizontalAlignment="Left" Height="52" Margin="139,235,0,0" VerticalAlignment="Top" Width="204" Click="BtnAssign_Click"/>
        <TextBox x:Name="txtFile" HorizontalAlignment="Left" Height="74" Margin="41,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176"/>

    </Grid>
</Window>
